{
  "name": "r6maps",
  "//": "WHEN UPDATING VERSION #: Search and replace # in all files (e.g. package.json, index.html, about(-fr).html, thanks.html, etc)",
  "//": "(this is hacky for now - did this because # doesn't increment often and avoided some complexities)",
  "version": "1.2.2",
  "description": "Rainbow Six Siege map quick references",
  "watch": {
    "build:js": "dev/js/*.js"
  },
  "scripts": {
    "test:js": "eslint dev/js/*.js dev/utils/*.js",
    "test": "npm run test:js",
    "clean:scss": "rimraf site/css/*",
    "build:scss": "npm run clean:scss && scss 'dev/scss/main.scss':'site/css/main.1.2.2.css'",
    "watch:scss": "npm run clean:scss && scss --watch 'dev/scss/main.scss':'site/css/main.1.2.2.css'",
    "clean:js": "rimraf site/js/*",
    "build:js": "npm run clean:js && uglifyjs --compress --mangle -o ./site/js/r6-maps.1.2.2.min.js --source-map  ./site/js/r6-maps.1.2.2.min.js.map --source-map-url r6-maps.1.2.2.min.js.map --source-map-include-sources -- ./dev/js/langs/r6-maps.lang-terms.js ./dev/js/langs/r6-maps.lang-terms.*.js ./dev/js/r6-maps.map-data.js ./dev/js/r6-maps.map-render.js ./dev/js/r6-maps.controls.js ./dev/js/r6-maps.select-maps.js ./dev/js/r6-maps.sessions.js ./dev/js/r6-maps.main.js",
    "watch:js": "npm run clean:js && npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/capajon/r6maps.git"
  },
  "keywords": [
    "Rainbow",
    "Six",
    "Maps",
    "Siege"
  ],
  "author": "Jon Capa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/capajon/r6maps/issues"
  },
  "homepage": "https://github.com/capajon/r6maps#readme",
  "devDependencies": {
    "eslint": "^2.2.0",
    "npm-watch": "^0.1.7",
    "rimraf": "^2.5.4"
  }
}
